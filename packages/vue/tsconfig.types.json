{
    "extends": "./tsconfig.json",
    "compilerOptions": {
        "outDir": "dist",
        "declaration": true,
        "declarationMap": true,
        "emitDeclarationOnly": true,
        "noEmit": false,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "composite": true,
        "rootDir": "src"
    },
    "include": [
        "src/exports.ts",
        "src/enums/Status.ts",
        "src/enums/DataShapeNames.ts",
        "src/enums/FieldType.ts",
        "src/server/types.ts",
        "src/db/types.ts",
        "src/db/prepareNote55.ts",
        "src/base-course/Interfaces/DataShape.ts",
        "src/base-course/Interfaces/FieldDefinition.ts",
        "src/base-course/Interfaces/Tagger.ts",
        "src/base-course/Interfaces/Validator.ts",
        "src/base-course/Interfaces/ValidatingFunction.ts",
        "src/base-course/Interfaces/ValidationResult.ts",
        "src/base-course/Interfaces/ViewData.ts",
        "src/base-course/Displayable.ts",
        "src/courses/NameSpacer.ts",
        "src/tutor/Elo.ts"
    ],
    "exclude": ["node_modules", "dist", "tests", "**/*.test.ts", "**/*.spec.ts"]
}
